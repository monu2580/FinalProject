<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/allteacherFragment"
    android:padding="2dp"
    android:background="@drawable/gradient6"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.deepesh.finalproject.Activity.Fragment.AllTeachersFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">


            <EditText
                android:layout_width="300dp"
                android:id="@+id/eTxtSearchCity"
                android:drawableRight="@android:drawable/ic_menu_search"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_srch_bg"
                android:hint="City...."/>

            <EditText
                android:id="@+id/eTxtSearchSubj"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_srch_bg"
                android:drawableRight="@android:drawable/ic_menu_search"
                android:hint="Subject..." />
            <EditText
                android:id="@+id/eTxtSearchName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_srch_bg"
                android:drawableRight="@android:drawable/ic_menu_search"
                android:hint="Name..." />
        </LinearLayout>

        </HorizontalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tRecyclerView">


                </android.support.v7.widget.RecyclerView>



                <!--<ListView
                    android:id="@+id/tListView"
                    android:layout_width="match_parent"
                    android:layout_height="470dp">


                </ListView>-->

            </LinearLayout>


    </LinearLayout>

</FrameLayout>
